{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_order.tax.header.show'|trans({'%name%': tax})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(tax, 'list') }}
{{ admin_resource_btn(tax, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(tax, 'edit') }}
    {{ admin_resource_btn(tax, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#prod-tax-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="prod-tax-general">
		      {{ show_row(tax.name, 'text', 'ekyna_core.field.name') }}
		      {{ show_row(tax.rate, 'number', 'ekyna_core.field.name') }}
		    </div>
	    </div>
	</div>
</div>
{% endblock %}